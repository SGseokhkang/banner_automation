{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["ES2017"],
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "typeRoots": [
      "../node_modules/@types",
      "../node_modules/@figma/plugin-typings"
    ]
  },
  "include": ["*.ts"],
  "exclude": ["node_modules"]
} 